@model File_tracking_system.File
<!-- Left side column. contains the logo and sidebar -->
<!-- Right side column. Contains the navbar and content of the page -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6 col-sm-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Delete File</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <form class="@Url.Action("Delete", "File")" method="POST">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="Name">Reference_Number</label>
                                @Html.TextBoxFor(model => model.Reference_number, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Reference_number)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Title</label>
                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Title)
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Volume_Number</label>
                                @Html.TextBoxFor(model => model.Volume_number, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Volume_number)
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">File_Status</label>
                                <select name="File_status">
                                    <option value="current">current</option>
                                    <option value="sem_current">semi-current</option>
                                    <option value="outdated">non-current</option>

                                </select>
                            </div>


                        </div><!-- /.box-body -->
                        <!-- /.box-body -->
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </div>
                    </form>
                </div><!-- /.box -->


            </div><!--/.col (left) -->
            <!-- right column -->
            <!--/.col (right) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- ./wrapper -->
