@model File_tracking_system.User
<!-- Left side column. contains the logo and sidebar -->
<!-- Right side column. Contains the navbar and content of the page -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <class="row">
            <!-- left column -->
            <div class="col-md-6 col-sm-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edit User</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <form class="@Url.Action("Edit", "User")" method="POST">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="Name">Name</label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>


                            <div class="form-group">
                                <label for="exampleInputEmail1">Department</label>
                                @Html.TextBoxFor(model => model.Department, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Department)
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Position</label>

                                <select name="Position">
                                    <option value="System_admin">System_admin</option>
                                    <option value="Supervisor">Supervisor</option>
                                    <option value="Record_manager">Record_manager</option>

                                </select>

                            </div>


                            <div class="form-group">
                                <label for="exampleInputPassword1">UserID</label>
                                @Html.TextBoxFor(model => model.UserID, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.UserID)
                            </div>
                        
                        
                        <!-- /.box-body -->
                        <!-- /.box-body -->
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                         </div>
                    </form>
                <!-- /.box -->
            </div>

            </div> <!--/.col (left) -->
            <!-- right column -->
            <!--/.col (right) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- ./wrapper -->
