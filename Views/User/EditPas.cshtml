@model File_tracking_system.User

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6 col-sm-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">EditPas</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <form class="@Url.Action("EditPas", "User")" method="POST">
                        <div class="box-body">

                            <div class="form-group">
                                <label for="exampleInputEmail1">Password</label>
                                <input type="password" class="form-control" id="Password" name="Password" placeholder="password">
                            </div>

                            <div class="form-group">

                                @Html.HiddenFor(modelItem => modelItem.UserID)
                            </div>

                            <div class="form-group">

                                @Html.HiddenFor(modelItem => modelItem.Department)
                            </div>

                            <div class="form-group">

                                @Html.HiddenFor(modelItem => modelItem.Name)
                            </div>
                            <div class="form-group">

                                @Html.HiddenFor(modelItem => modelItem.Position)
                            </div>

                        </div><!-- /.box-body -->
                        <!-- /.box-body -->
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                    @if (null != TempData["alertMessage"])
                    {
                        <script type="text/javascript">
                            alert("@TempData["alertMessage"]");
                        </script>
                    }
                </div><!-- /.box -->


            </div><!--/.col (left) -->
            <!-- right column -->
            <!--/.col (right) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- ./wrapper -->
<!-- jQuery 2.1.3 -->
<script src="~/Content/adm/plugins/jQuery/jQuery-2.1.3.min.js"></script>
<!-- Bootstrap 3.3.2 JS -->
<script src="~/Content/adm/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<!-- FastClick -->
